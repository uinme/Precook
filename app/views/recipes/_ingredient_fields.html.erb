<div class="nested-fields field is-horizontal">
  <div class="field-label">
    <%= f.label :name, '材料', class: 'label' %>
  </div>
  <div class="field-body">
    <div class="field">
      <div class="control">
        <%= f.text_field :name, class: 'input', placeholder: '材料名' %>
        </div>
    </div>
    <div class="field">
      <div class="control">
        <%= f.number_field :amount, class: 'input', placeholder: '分量 [g]' %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%= f.text_field :cut_style, class: 'input', placeholder: '切り方' %>
      </div>
    </div>
    <div class="field">
      <div class="links control">
        <%= link_to_remove_association '材料削除', f , class: 'button'%>
      </div>
    </div>
  </div>
</div>
