<section class="section">
  <div class="container">
    <h1 class="title">週間プラン</h1>

    <div class="container">
      <%= form_for @weekly_plan do |f| %>
        <div class="field is-horizontal">
          <div class="field-label is-normal">
            <%= f.label :name, 'プラン名', class: 'label' %>
          </div>
          <div class="field-body">
            <div class="field">
              <div class="control">
                <%= f.text_field :name, class: 'input' %>
              </div>
            </div>
          </div>
        </div>

        <%= f.fields_for :plans do |p| %>
          <div class="field is-horizontal">
            <div class="field-label is-normal">
              <%= p.label :recipe, "#{p.index + 1}日目のレシピ", class: 'label' %>
            </div>
            <div class="field-body">
              <div class="field">
                <div class="select">
                  <%= p.collection_select :recipe_id, Recipe.all, :id, :name %>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="field is-horizontal">
          <div class="field-label"></div>
          <div class="field-body">
            <div class="field">
              <div class="control">
                <%= f.submit '保存', class: 'button is-primary' %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
